{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
        "include": [
            "./scripts/"
        ],
        "includePattern": ".+\\.+mjs(doc|x)?$",
        "excludePattern": "((node_modules/))"
    },
    "sourceType": "module",
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "encoding": "utf8",               
        "destination": "./docs/",         
        "recurse": true,
        "verbose": true,
        "readme": "README.md",
        "template": "./node_modules/jsdoc-template-main"
    }
}

